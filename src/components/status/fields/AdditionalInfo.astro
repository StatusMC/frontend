---
import Collapsible from "../../widgets/Collapsible.astro";
import CodeHighlight from "../../widgets/CodeHighlight.astro";

import type { JavaStatusAnswer } from "../interfaces";
import Base from "./Base.astro";

export type Props = { status: JavaStatusAnswer };

const { status }: Props = Astro.props;
---

{
	status.additional ? (
		<Base nameValue="Additional Info">
			<Collapsible title="Open">
				<CodeHighlight code={JSON.stringify(status.additional, null, 2)} language="js" />
			</Collapsible>
		</Base>
	) : null
}
