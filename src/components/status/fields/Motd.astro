---
import type { OnlineStatusAnswer } from "../interfaces";
import Base from "./Base.astro";

export type Props = { status: OnlineStatusAnswer };

const { status }: Props = Astro.props;
---

<Base nameValue="MOTD">
	<pre
		class="block w-full overflow-x-auto rounded border border-slate-400 bg-neutral-900 p-4"
		set:html={status.motd.html}
	/>
</Base>
