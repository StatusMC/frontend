---
import type { BedrockStatusAnswer } from "~/components/status/interfaces";
import Base from "~/components/status/Base.astro";

export type Props = { status: BedrockStatusAnswer };

const { status }: Props = Astro.props;
---

{
	status.online ? (
		<Base nameValue="Edition">
			{status.version.edition === "MCPE"
				? "Bedrock Edition"
				: status.version.edition === "MCEE"
				? "Education Edition"
				: status.version.edition}
		</Base>
	) : null
}
