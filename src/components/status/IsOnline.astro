---
import type { AnyStatusAnswer } from "~/components/status/interfaces";
import Base from "~/components/status/Base.astro";

export type Props = { status: AnyStatusAnswer };

const { status }: Props = Astro.props;
---

<Base nameValue="Status" valueClasses={`bg-${status.online ? "green-700" : "red-600"} text-white px-2 py-1 rounded`}>
	{status.online ? "Online" : "Offline"}
</Base>
